//output:
// *                  *
// **                **
// ***              ***
// ****            ****
// *****          *****
// ******        ******
// *******      *******
// ********    ********
// *********  *********
// ********************
// for n=10

using namespace std;
#include <iostream>

int main() {
    cout<<"enter a number\n";
    int n;
    cin>>n;
    n-=1;
    for(int i;i<=n;i++){
        for(int j=0;j<=i;j++){
            cout<<"*";
        }
        for(int k=1;k<=2*(n-i);k++){
            cout<<" ";
        }
        for(int j=0;j<=i;j++){
            cout<<"*";
        }
        cout<<"\n";
        
    }
    
    return 0;
}
